@model List<WebSiteDocuments.Data.Community>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    #chatContainer {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
    }

    #chatBox {
        height: 400px;
        overflow-y: scroll;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        background-color: #fff;
        transition: all 0.3s;
    }

    .message {
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 5px;
        background-color: #f1f0f0;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
    }

        .message strong {
            color: #333;
        }

        .message .timestamp {
            font-size: 12px;
            color: #777;
        }

    #messageInput {
        width: calc(100% - 60px);
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px 0 0 5px;
    }

    #sendButton {
        width: 60px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 0 5px 5px 0;
        background-color: #f9f9f9;
        cursor: pointer;
        transition: all 0.3s;
    }

        #sendButton:hover {
            background-color: #e9e9e9;
        }

        #sendButton:active {
            background-color: #d9d9d9;
        }

        #messageInput:focus,
        #sendButton:focus {
            outline: none;
            border-color: #333;
        }

    #chatBox::-webkit-scrollbar {
        width: 8px;
    }

    #chatBox::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 5px;
    }

    #chatBox::-webkit-scrollbar-track {
        background-color: #f9f9f9;
        border-radius: 5px;
    }
</style>

<div id="chatContainer">
    <h1 class="text-center mb-4">Community Page</h1>

    <div id="chatBox">
        @foreach (var message in Model)
        {
            <div class="message">
                <strong>@message.UserName:</strong> @message.Message
                <div class="timestamp">@message.TimeStamp</div>
            </div>
        }
    </div>

    <form id="chatForm" class="d-flex" style="margin-top: 20px;" action="/Community/SendMessage" method="post">
        <input type="text" id="messageInput" class="flex-grow-1 me-2" placeholder="Type your message here..." name="message" />
        <button type="submit" id="sendButton" class="btn">Send</button>
    </form>
</div>

@section Scripts {
    <script>
        $('#chatForm').submit(function (e) {
            e.preventDefault();
            var message = $('#messageInput').val();
            $.post('/Community/SendMessage', { message: message }, function (data) {
                var newMessage = data;
                var messageHtml = "<div style='margin-bottom: 10px; padding: 5px; border-radius: 5px; background-color: #f1f0f0;'><strong>" + newMessage.userName + ":</strong> " + newMessage.message + "</div>";
                $('#chatBox').append(messageHtml); // Append the new message to the bottom
                $('#messageInput').val('');
                scrollToBottom(); // Scroll to the bottom after appending the new message
            });
        });

        function scrollToBottom() {
            $('#chatBox').scrollTop($('#chatBox')[0].scrollHeight);
        }

        // Scroll to bottom on page load
        $(document).ready(function () {
            scrollToBottom();
        });
    </script>
}

