@model WebSiteDocuments.Data.ReviewModel

<h2 class="text-center mb-4">Submit Review</h2>

<form asp-controller="Review" asp-action="SubmitReview" method="post" class="container">
    <div class="form-group row">
        <label for="UserShowed" class="col-sm-2 col-form-label">User:</label>
        <div class="col-sm-10">
            <input type="text" id="UserShowed" name="UserShowed" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Rating:</label>
        <div class="col-sm-10">
            <div class="rating">
                <input type="radio" id="star5" name="Rating" value="5" /><label for="star5" title="5 stars">★</label>
                <input type="radio" id="star4" name="Rating" value="4" /><label for="star4" title="4 stars">★</label>
                <input type="radio" id="star3" name="Rating" value="3" /><label for="star3" title="3 stars">★</label>
                <input type="radio" id="star2" name="Rating" value="2" /><label for="star2" title="2 stars">★</label>
                <input type="radio" id="star1" name="Rating" value="1" /><label for="star1" title="1 star">★</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="Comment" class="col-sm-2 col-form-label">Comment:</label>
        <div class="col-sm-10">
            <textarea id="Comment" name="Comment" class="form-control"></textarea>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">Submit Review</button>
    </div>
</form>

<style>
    .rating {
        display: inline-block;
        unicode-bidi: bidi-override;
        direction: rtl;
        text-align: center;
    }

        .rating input {
            display: none;
        }

        .rating label {
            color: #ddd;
            font-size: 32px;
            padding: 0 5px;
            cursor: pointer;
        }

        .rating input:checked ~ label {
            color: #f90;
        }

        .rating label:hover,
        .rating label:hover ~ label {
            color: #fc0;
        }

        .rating .selected {
            color: #f90;
        }

    /* Custom styling for the Submit button */
    .btn-primary {
        background-color: #f90;
        border-color: #f90;
        font-weight: bold;
        padding: 10px 20px;
        margin-top: 20px;
        border-radius: 5px;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #fc0;
            border-color: #fc0;
            color: #fff;
        }

        .btn-primary:focus {
            outline: none;
        }
</style>
